<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layer_background"
    >  			          
     			    
		   <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="vertical"
 		   				android:layout_marginTop="0dp"
		    android:layout_gravity="center_horizontal"             
 >

    	  		           <include layout="@layout/ecobank_action_bar" />
		       
				           <FrameLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	     			<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		> 
			    		<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            	       <TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="Airtime Top-up"
		android:gravity="center" 
		style="@style/title_text"
	    android:layout_gravity="center" 
		/>
		                                      <include layout="@layout/list_divider" />
		       		       <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
     <TextView
		android:id="@+id/own_number_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Own Number"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
     
     <CheckBox android:id="@+id/own_number"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:text="" 
        		android:gravity="center" 
        style="@style/label_text"
        android:layout_gravity="center"       
        android:button="@drawable/check_box_selector"/>
     
          </LinearLayout>          
	                            	
      		                                      <include layout="@layout/list_divider" />
      		   <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="vertical"
 		   				android:layout_marginTop="0dp"
		    android:layout_gravity="center_horizontal"             
 >
      		       
  <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"  
		    android:layout_marginBottom="0dp"           
 >
 <TextView
		android:id="@+id/specify_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Specify Other"
		android:gravity="left|center" 
		style="@style/subtitle_text"
		/>

          </LinearLayout>
                                       <include layout="@layout/list_divider" />
  
      <LinearLayout 
          		android:id="@+id/mobile_no_layout"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/mobile_no_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Mobile Number"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <AutoCompleteTextView 
        android:id="@+id/mobile_no_field"  
        android:layout_width="160dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
          
      		                                          <include layout="@layout/list_divider" />
      <LinearLayout 
               android:id="@+id/networks_layout"  
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="left"             
 >
 <TextView
		android:id="@+id/select_network_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Mobile Network:"
		android:gravity="left" 
		style="@style/label_text"
		/>
   <RadioGroup
              android:id="@+id/networks_radiogroup__layout"  
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <RadioButton android:id="@+id/safaricom"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="Safaricom" 
          style="@style/list_radio_button"
          android:button="@drawable/radio_button_selector"/>
           <RadioButton android:id="@+id/airtel"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="Airtel"
         style="@style/list_radio_button"
           android:button="@drawable/radio_button_selector"/>
    </RadioGroup>

          </LinearLayout>
                                         <include layout="@layout/list_divider" />
      
      	<LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="left"             
  		   				android:layout_marginTop="10dp"
 >
 <TextView
		android:id="@+id/select_amount_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Select Amount:"
		android:gravity="left" 
		style="@style/label_text"
		/>
   <RadioGroup
              android:id="@+id/amounts_layout"  
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <RadioButton android:id="@+id/fifty"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="50" 
           style="@style/list_radio_button"
          android:button="@drawable/radio_button_selector"/>
      <RadioButton android:id="@+id/hundred"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="100" 
           style="@style/list_radio_button"
          android:button="@drawable/radio_button_selector"/>
      <RadioButton android:id="@+id/twohundred"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="200"
           style="@style/list_radio_button"
          android:button="@drawable/radio_button_selector" />
        <RadioButton android:id="@+id/fivehundred"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="500"
           style="@style/list_radio_button"
          android:button="@drawable/radio_button_selector" />
         <RadioButton android:id="@+id/thousand"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="1000"
           style="@style/list_radio_button"
          android:button="@drawable/radio_button_selector"/>
          <RadioButton android:id="@+id/specify_amount"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"       
          android:text="Specify Amount"
           style="@style/list_radio_button"
          android:button="@drawable/radio_button_selector"  />
    </RadioGroup>

          </LinearLayout>
     
      	                                   <include layout="@layout/list_divider" />
      	
          	                  <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/amount_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Amount"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/amount_field"  
        android:layout_width="160dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
                                       <include layout="@layout/list_divider" />
          	                  
          </LinearLayout>
              	
      	<Button
	android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="36dp"
        		    android:layout_gravity="center"       
        android:text="Submit"
        android:textStyle="normal"
        android:background="@drawable/ecobank_button"
        		style="@style/lipuka_button"
            	    android:layout_marginBottom="5dp"          
        		/>
            
         </LinearLayout>
		
			</ScrollView>
			    				    		 <RelativeLayout
    android:id="@+id/help_layout"
		android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone"
>   
 <WebView  
    android:id="@+id/webview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
    android:background="@drawable/help_background"
/>

 <ImageButton
    	 android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:background="#00000000"
        android:src="@drawable/fileclose"
         android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
	 			   			  	 		        </FrameLayout>
	 			   			  	 		        
	</LinearLayout> 
		       
    	 

</FrameLayout>