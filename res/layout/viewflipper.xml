<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/lipuka.android"
    android:id="@+id/home_layout"
    android:gravity="center_horizontal" 
		android:orientation="vertical"
		android:layout_width="fill_parent"
    android:layout_height="fill_parent"
            android:background="@drawable/layer_background"
>     
	   <TextView android:id="@+id/featuredTextView" android:gravity="center_vertical|center_horizontal"
		android:text="" android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		style="@style/featuredTitle"
		android:layout_alignParentTop="true">
		</TextView>
		  <lipuka.android.view.CoverFlow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/featured"
        		android:layout_below="@+id/featuredTextView"
        				
        		/>
       
		<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@+id/featured"
		android:fillViewport="true">
		 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
	<TextView android:id="@+id/menu_item_text" android:gravity="center_vertical|center_horizontal"
		android:text="" android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		style="@style/menu_item_text"
		android:shadowColor="#ffffff"  
        android:shadowRadius="3.0"  
        android:shadowDx="5.0"
        android:shadowDy="5.0" 
         
        />
		<TextView
		android:id="@+id/description_body"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:padding="5dp"
		android:gravity="center_vertical|center_horizontal"
		style="@style/menu_item_description"
        
		/>
		        </LinearLayout>
		</ScrollView>

    
</RelativeLayout>
