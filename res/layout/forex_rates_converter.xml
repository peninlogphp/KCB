<?xml version="1.0" encoding="utf-8"?>			          
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/forex_rates_converter"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >     		       
      <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <EditText 
        android:id="@+id/converter_amount_field"  
        android:layout_width="42dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        android:layout_marginRight="2dp" 
        />

 
<Spinner 
        android:id="@+id/converter_from_spinner"
        android:layout_width="112dp" 
        android:layout_height="42dp"  
        android:layout_gravity="center"
            android:textSize="16dp"
              android:background="@drawable/slim_spinner_normal"       
    />
<ImageView
	        android:id="@+id/arrow_right_icon"
	        android:layout_gravity="center"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:src="@drawable/converter_arrow" 
	        />
<Spinner 
        android:id="@+id/converter_to_spinner"
        android:layout_width="112dp" 
        android:layout_height="42dp"  
        android:layout_gravity="center"
            android:textSize="16dp"
              android:background="@drawable/slim_spinner_normal"       
    />
          </LinearLayout>
          
      		                                          <include layout="@layout/list_divider" />     
       	                
      	<Button
	android:id="@+id/convert"
        android:layout_width="150dp"
        android:layout_height="36dp"
        		    android:layout_gravity="center"       
        android:text="Convert"
        android:textStyle="normal"
        android:background="@drawable/ecobank_button"
        		style="@style/lipuka_button"
        		/>
      	
                <include layout="@layout/list_divider" />
                
          <TextView 	android:id="@+id/converted_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text=""
		android:gravity="left|center" 
		style="@style/label_text"
		/>
                                       <include layout="@layout/list_divider" />
          	                  
              	
      	
         </LinearLayout>
		