<?xml version="1.0" encoding="utf-8"?>			          
     			    
		   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="vertical"           
 >
 			  <RelativeLayout 
 android:layout_width="fill_parent"
 android:layout_height="52dp"
 android:orientation="horizontal"  
     android:background="@drawable/action_bar_background">

          <ImageView
	        android:id="@+id/ecobank_logo"
               		    android:layout_gravity="left|center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/ecobank_logo"
 	        android:layout_alignParentLeft="true"
	               		       android:layout_marginLeft="20dp"
 	        android:layout_centerInParent="true"
	         />
           
         		   <LinearLayout 
         		        android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"           
 android:layout_alignParentRight="true"     
	         android:layout_alignParentTop="true"     
>
	                             <Button
	        android:id="@+id/home_button"
        android:layout_width="34dp"
        android:layout_height="34dp"
                          android:text=""
                                    style="@style/song_button_text"
                               android:background="@drawable/ecobank_action_bar_button"
       		    android:gravity="left|center"
       		           		        android:drawableTop="@drawable/home"
       		    android:layout_gravity="center"
 	          />
        <LinearLayout 
      	 android:id="@+id/divider_one"
 android:layout_width="1dp"
 android:layout_height="26dp"
 android:orientation="horizontal"  
  	          	    android:layout_gravity="center" 
     android:background="@drawable/action_bar_divider">
                                                    </LinearLayout> 
            <Button
    	 android:id="@+id/help"
        android:layout_width="34dp"
        android:layout_height="34dp"
                          android:text=""
                                    style="@style/song_button_text"
                               android:background="@drawable/ecobank_action_bar_button"
       		    android:gravity="left|center"
       		           		        android:drawableTop="@drawable/help"
        	              		    android:layout_gravity="center"
 />
       <LinearLayout 
     	 android:id="@+id/divider_two"
 android:layout_width="1dp"
 android:layout_height="26dp"
 android:orientation="horizontal"  
   	          	    android:layout_gravity="center" 
     android:background="@drawable/action_bar_divider">
                                                    </LinearLayout> 
            <Button
    	 android:id="@+id/sign_out"
        android:layout_width="34dp"
        android:layout_height="34dp"
                          android:text=""
                                    style="@style/song_button_text"
                               android:background="@drawable/ecobank_action_bar_button"
       		    android:gravity="left|center"
       		           		        android:drawableTop="@drawable/sign_out"
        	              		    android:layout_gravity="center"
 />                                         </LinearLayout> 
                 
                          </RelativeLayout> 
                          
                          </LinearLayout> 