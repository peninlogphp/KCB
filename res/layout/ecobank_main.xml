<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layer_background2"
    >
   			   <LinearLayout 
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:orientation="vertical" 
   android:layout_gravity="center" >
          <include layout="@layout/ecobank_action_bar" />
   			       
  			           <FrameLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
		    		<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            		   <LinearLayout 
 			       	        android:id="@+id/accounts_title_layout"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal" 
  android:layout_gravity="center"
  	         		   				android:layout_marginBottom="0dp">

                  </LinearLayout>    
   <ListView android:id="@+id/lipuka_list_view" 
  android:layout_height="fill_parent"
android:layout_width="fill_parent"
	android:gravity="center"
	 android:listSelector="@drawable/list_selector"
        android:background="@drawable/layer_background"
        android:cacheColorHint="#00000000"
android:layout_alignParentTop="true"
                                    style="@style/ecobank_list_view"
>
</ListView>

   </LinearLayout>
		
		    		 <RelativeLayout
    android:id="@+id/help_layout"
		android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone"
>   
 <WebView  
    android:id="@+id/webview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
    android:background="@drawable/help_background"
/>

 <ImageButton
    	 android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:background="#00000000"
        android:src="@drawable/fileclose"
         android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
		    		  <RelativeLayout
    android:id="@+id/about_layout"
		android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone"
>   
 <WebView  
    android:id="@+id/about_webview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
    android:background="@drawable/help_background"
/>

 <ImageButton
    	 android:id="@+id/close_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:background="#00000000"
        android:src="@drawable/fileclose"
         android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
	 			   			  	 		        </FrameLayout>

		                        </LinearLayout>    

</FrameLayout>
