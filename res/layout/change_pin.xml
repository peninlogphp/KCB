<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layer_background"
    >
    
			   <LinearLayout 
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:orientation="vertical"            
 		    android:layout_gravity="center"             
     android:background="@drawable/inner_bg"
        		              		       android:layout_marginRight="3dp"
        		              		       android:layout_marginLeft="3dp"
 >
  
			      <include layout="@layout/ecobank_action_bar" />
			      <include layout="@layout/paymax_title_bar" />
			      		       
				           <FrameLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    		             		       android:layout_marginBottom="50dp"
    >
<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		> 
			    		<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
            android:orientation="vertical"
            >     		       
              	                  <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/card_number_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Card Number:"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <TextView
		android:id="@+id/card_number_value"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
        android:text="6464646468746632"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
          </LinearLayout>
                                       <include layout="@layout/list_divider" />
          	                          <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/current_pin_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Current PIN"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/current_pin_field"  
        android:layout_width="150dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
          
      		                                          <include layout="@layout/list_divider" />
     
      
      
          	                  <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/new_pin_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="New PIN"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/new_pin_field"  
        android:layout_width="150dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
                                       <include layout="@layout/list_divider" />
          	                  
              	                  <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/confirm_pin_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Confirm PIN"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/confirm_pin_field"  
        android:layout_width="150dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
                                       <include layout="@layout/list_divider" />
 
          	            	
      	<Button
	android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="36dp"
        		    android:layout_gravity="center"       
        android:text="Submit"
        android:textStyle="normal"
        android:background="@drawable/ecobank_button"
        		style="@style/lipuka_button"
            	    android:layout_marginBottom="5dp"          
        		/>
            
         </LinearLayout>
		
			</ScrollView>
			    				    		 <RelativeLayout
    android:id="@+id/help_layout"
		android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone"
>   
 <WebView  
    android:id="@+id/webview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
    android:background="@drawable/help_background"
/>

 <ImageButton
    	 android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:background="#00000000"
        android:src="@drawable/fileclose"
         android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
	 			   			  	 		        </FrameLayout>
    </LinearLayout> 

    
</FrameLayout>
