<?xml version="1.0" encoding="utf-8"?>			          
     			    
		   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/external_ft"
 android:layout_width="fill_parent"
 android:layout_height="fill_parent"
 android:orientation="vertical"
 		   				android:layout_marginTop="0dp"
		    android:layout_gravity="center_horizontal"             
       android:background="@drawable/ft_border"
 		   				android:layout_marginLeft="1dp"
 		   				android:layout_marginRight="1dp"
 >
		       
    <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
   		   				android:layout_marginTop="2dp"
 >
 <TextView
		android:id="@+id/fname_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="First Name"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/fname_field"  
        android:layout_width="160dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
                       <include layout="@layout/list_divider" />
    
         <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/lname_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Last Name"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/lname_field"  
        android:layout_width="160dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>	
          
                       <include layout="@layout/list_divider" />
         <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/bank_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Bank"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <Spinner 
        android:id="@+id/bank_spinner"
        android:layout_width="160dp" 
        android:layout_height="50dp"  
        android:layout_gravity="center"
    />
 
          </LinearLayout>	
                         <include layout="@layout/list_divider" />
         
                 <LinearLayout 
          		android:id="@+id/branch_layout"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/branch_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Branch"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <AutoCompleteTextView 
        android:id="@+id/branch_field"  
        android:layout_width="160dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
          
                        <include layout="@layout/list_divider" />
                 <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/destination_account_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Destination Account No."
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/destination_account_field"  
        android:layout_width="160dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
                        <include layout="@layout/list_divider" />
                 
         <LinearLayout 
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:orientation="horizontal"
		    android:layout_gravity="center"             
 >
 <TextView
		android:id="@+id/amount_eft_label"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
        android:text="Amount"
		android:gravity="left|center" 
		style="@style/label_text"
		/>
 <EditText 
        android:id="@+id/amount_eft_field"  
        android:layout_width="160dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        />
          </LinearLayout>
                      <include layout="@layout/list_divider" />
         
         	<Button
	android:id="@+id/submit_eft"
        android:layout_width="150dp"
        android:layout_height="36dp"
        		    android:layout_gravity="center"       
        android:text="Submit"
        android:textStyle="bold"
        android:background="@drawable/ecobank_button"
        		style="@style/lipuka_button"
        		android:layout_marginBottom="10dp"
        		/>
        
	</LinearLayout> 
