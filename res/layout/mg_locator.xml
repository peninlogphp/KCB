<?xml version="1.0" encoding="utf-8"?>
    
			   <LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mg_layer_background"
 android:orientation="vertical"            
 >
 	 <include layout="@layout/mg_action_bar" />
			      <include layout="@layout/mg_locator_title_bar" />
			      					      		       
				           <FrameLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   		    android:layout_gravity="center"             
    >

 <com.readystatesoftware.maps.TapControlledMapView
    android:id="@+id/mapview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:apiKey="0kusDtYI-6l84Agy5kPz6muHnKkzx1zqo-EBzog"
android:layout_marginRight="3dp"
        		              		       android:layout_marginLeft="3dp"
        		              		        		    android:layout_gravity="center"             
        		            		     android:background="@drawable/main_content_bg"
        		              		       />

 			   			    				    		 <RelativeLayout
    android:id="@+id/help_layout"
		android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone"
>   
 <WebView  
    android:id="@+id/webview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
    android:background="@drawable/help_background"
/>

 <ImageButton
    	 android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:background="#00000000"
        android:src="@drawable/fileclose"
         android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"/>
    </RelativeLayout>
    </FrameLayout>
 			   			    				    		 
        </LinearLayout> 
 			   
