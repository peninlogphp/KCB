<?xml version="1.0" encoding="utf-8"?>			          
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/investments_n_credit_apply_for_credit"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >     		       
          <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="Send me a credit application form to:"
		android:gravity="center" 
		style="@style/label_text"
		/>

 <EditText 
        android:id="@+id/email_address_field"  
        android:layout_width="150dp" 
        android:layout_height="wrap_content"  
        		    android:layout_gravity="center"       
        		    android:hint="Email address"       
        />
                                       <include layout="@layout/list_divider" />
          	                  
              	
      	<Button
	android:id="@+id/apply_for_credit_submit"
        android:layout_width="150dp"
        android:layout_height="36dp"
        		    android:layout_gravity="center"       
        android:text="Submit"
        android:textStyle="normal"
        android:background="@drawable/ecobank_button"
        		style="@style/lipuka_button"
        		/>
                <include layout="@layout/list_divider" />
      	
         </LinearLayout>
		